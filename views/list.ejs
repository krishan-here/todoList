<%- include('header') -%>
<div class="box" id="heading">
  <h1><%= event %></h1>
</div>

<div class="box">

  <% newItem.forEach((item)=>{ %>
  <form action="/delete" method="POST">
    <div class="item">
      <input type="checkbox" name="checkbox" value="<%= item._id %>" onChange="this.form.submit()" />
      <p><%= item.name %></p>
    </div>
  </form>
  <% }); %>
</div>
<form action="/" method="post">
  <input type="text" name="newItem" placeholder="next todo" autocomplete="off" required />
  <button type="submit" name="list" value=<%= event %>>+</button>
</form>

<%- include('footer') -%>